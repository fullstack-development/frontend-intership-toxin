include ../checkbox/checkbox.pug

mixin checkbox-list({ title="", isDropdown=false, isRich=false, listItems=[], isOpened=true })
  -
    const titleClassName = "checkbox__title"
    const descriptionClassName = "checkbox__description"
    const titleFontBoldModifier = isRich ? "checkbox__title_font_bold" : ""
    const openDropdownModifier = isOpened ? "checkbox-list__list_opened" : ""

  .checkbox-list
    if isDropdown
      .checkbox-list__dropdown.js-checkbox-list__dropdown(tabindex=0)
        h3.checkbox-list__dropdown-title #{title}
        span.checkbox-list__dropdown-arrow-down.js-checkbox-list__dropdown-arrow-down
    ul.checkbox-list__list.js-checkbox-list__list(class=openDropdownModifier)
      each item in listItems
        li.checkbox-list__item
          +checkbox({
            title: item.title,
            description: item.description,
            checked: item.checked, isRich
          })