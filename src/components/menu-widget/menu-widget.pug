include ../logo/logo.pug
include ../toggle/toggle.pug

mixin menu-widget({ logo={}, toggle={}, leftMenu={}, rightMenu={} })
  .menu-widget.js-menu-widget
    .menu-widget__container
      .menu-widget__logo.js-menu-widget__logo
        +logo(logo)
      .menu-widget__toggle.js-menu-widget__toggle
        +toggle(toggle)
      .menu-widget__header
        span.menu-widget__header-text #{leftMenu.title}
        span.menu-widget__header-text #{rightMenu.title}
      .menu-widget__lists
          ul.menu-widget__ui-kit
            each item in leftMenu.items
              li.menu-widget__item
                a&attributes({
                  class: ['menu-widget__text', 'js-menu-widget__text'],
                  href: `./${item.link}.html`,
                }) #{item.title}
          ul.menu-widget__pages
            each item in rightMenu.items
              li.menu-widget__item
                a&attributes({
                  class: ['menu-widget__text', 'js-menu-widget__text'],
                  href: `./${item.link}.html`,
                }) #{item.title}