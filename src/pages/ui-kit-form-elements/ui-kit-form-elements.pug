extends ../../layouts/ui-kit-layout.pug
include ../../components/dropdown/dropdown.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/like/like.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/radio/radio.pug
include ../../components/toggle/toggle.pug
include ../../components/rating/rating.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/range-slider/range-slider.pug
include ../../components/room-dignities/room-dignities.pug
include ../../components/comment/comment.pug
include ../../components/pagination/pagination.pug
include ../../components/text-field/text-field.pug
include ../../components/button/button.pug
include ../../components/heading/heading.pug

block variables
  - const title = "Form & Elements"

block script
  script(src="./index.js" defer)

block content
  main.form-elements
    .form-elements__container
      section.form-elements__text-fields-buttons
        .form-elements__text-fields
          .form-elements__text-field-wrapper
            +heading({ level: "h3", title: "text field", description: "default" })
            +text-field({ 
              type: "text",
              placeholder: "Email", 
              name: "email",
              autocomplete: "on", 
            })

          .form-elements__text-field-wrapper
            +heading({ level: "h3", title: "text field", description: "hover / focus" })
            +text-field({ 
              type: "text",
              placeholder: "This is pretty awesome",
              name: "email",
              autocomplete: "off",
              focused: true,
            })

          .form-elements__text-field-wrapper
            +heading({ level: "h3", title: "dropdown", description: "default" })
            +dropdown({
              isOpen: false,
              group: "guests", 
              elements: [
                { title: "Взрослые", id: "adults", count: 0 },
                { title: "Дети", id: "children", count: 0 }, 
                { title: "Младенцы", id: "babies", count: 0 },
              ],
              options: {
                defaultText: 'Сколько гостей',
                buttons: true,
                total: true,
                numberOfLetters: 35,
                plurals: {
                  totalItems: ['гость', 'гостя', 'гостей'],
                  babies: ['младенец', 'младенца', 'младенцев'],
                },
              }
            })

          .form-elements__text-field-wrapper
            +heading({ level: "h3", title: "masked text field", description: "default" })
            +text-field({ 
              type: "text",
              masked: true, 
              placeholder: "ДД.ММ.ГГГГ",
              name: "text",
              withMask: true,
            })

          .form-elements__text-field-wrapper
            +date-dropdown({ 
              type: "text",
              dataType: "date-dropdown-start",
              dataTypeEnd: "date-dropdown-end",
              placeholder: "ДД.ММ.ГГГГ",
              name: "date",
              autocomplete: "off",
              hasArrow: true,
              hasTwoInputs: true,
              startTitle: "date dropdown",
              endTitle: "date dropdown",
              withMask: true,
              options: {
                inline: true,
                dateFormat: 'dd.mm.yyyy',
                position: 'bottom left',
                hasTwoInputs: true,
                initialDates: ['2019-08-19', '2019-08-23'],
              },
            })

          .form-elements__text-field-wrapper
            .form-elements__text-field-wrapper_size_medium 
              +heading({ level: "h3", title: "filter date dropdown" })  
              +date-dropdown({ 
                type: "text",
                dataType: "filter-date-dropdown",
                placeholder: "ДД.ММ - ДД.ММ",
                name: "text",
                autocomplete: "off",
                hasArrow: true,
                isReadonly: true,
                isLowercase: true,
                options: {
                  dateFormat: 'd M',
                  multipleDatesSeparator: ' - ',
                  initialDates: ['2019-08-19', '2019-08-23'],
                  smallSize: true,
                },
              })

          .form-elements__text-field-wrapper 
            .form-elements__text-field-wrapper_size_medium
              +heading({ level: "h3", title: "subscription text field" })
              +text-field({ 
                type: "text",
                dataType: "subscription-text-field",
                placeholder: "Email",
                name: "email",
                autocomplete: "on",
                isSubscription: true,
              })    

        .form-elements__small-buttons
          .form-elements__small-buttons-wrapper
            +heading({ level: "h3", title: "checkbox buttons" })
            +checkbox-list({	
              listItems: [
                { title: "Можно курить" },
                { title: "Можно с питомцами" },
                { title: "Можно пригласить гостей (до\u00A010\u00A0человек)", checked: true }
              ]
            })

          .form-elements__small-buttons-wrapper
            +heading({ level: "h3", title: "radio buttons"  })
            .form-elements__radio-buttons-container
              +radio({ group: "gender", title: "Мужчина", checked: true })
              +radio({ group: "gender", title: "Женщина", checked: false })

          .form-elements__small-buttons-wrapper
            +heading({ level: "h3", title: "toggle" })
            .form-elements__toggle-buttons-container
              +toggle({ title: "Получать спецпредложения", checked: true })
              +toggle({ title: "Получать спецпредложения", checked: false })

          .form-elements__small-buttons-wrapper
            +heading({ level: "h3", title: "like button" })
            .form-elements__like-buttons-container
              +like({ value: 2 })
              +like({ value: 12, active: true })

          .form-elements__small-buttons-wrapper
            +heading({ level: "h3", title: "rate button" })
            .form-elements__rating-buttons-container
              +rating(5)
              +rating(4)

        .form-elements__buttons
          .form-elements__buttons-wrapper
            .form-elements__range-slider-container
              +range-slider({
                title: "range slider",
                options: {
                  range: true,
                  min: 0,
                  max: 15000,
                  step: 100,
                  values: [5000, 10000],
                }
              })

          .form-elements__buttons-wrapper
            +heading({ level: "h3", title: "buttons" })
            .form-elements__buttons-container
              +button({
                buttonName: "click me",
                size: "small",
                textColor: "white"
              })
              +button({
                buttonName: "click me",
                size: "small",
                textColor: "white",
                disabled: true
              })
            .form-elements__buttons-container
              +button({
                buttonName: "click me",
                size: "small",
                textColor: "purple",
                buttonVariation: "fillWhite"
              })
              +button({
                buttonName: "click me",
                size: "small",
                textColor: "purple",
                buttonVariation: "fillWhite",
                disabled: true
              })
            .form-elements__buttons-container-inline
              +button({
                buttonName: "click me",
                textColor: "purple",
                buttonVariation: "inline"
              })
              +button({
                buttonName: "click me",
                textColor: "gray",
                disabled: true,
                buttonVariation: "inline"
              })
            +button({
              buttonName: "перейти к оплате",
              textColor: "white",
              size: "large",
              buttonVariation: "withArrow"
              })

          .form-elements__buttons-wrapper
            +heading({ level: "h3", title: "pagination" })
            .form-elements__pagination-container
            +pagination({
              pageSize: 12,
              amountOfElements: 180,
              showNavigator: true,
            })

      section.form-elements__dropdowns
        .form-elements__dropdowns-block-left
          .form-elements__dropdowns-wrapper
            +heading({ level: "h3", title: "dropdown", description: "expanded" })
            +dropdown({
              isOpen: true, 
              group: "comfort", 
              elements: [
                { title: "Спальни", id: "bedrooms", count: 2 }, 
                { title: "Кровати", id: "beds", count: 2 }, 
                { title: "Ванные комнаты", id: "bathrooms", count: 0 }
              ],
              options: {
                defaultText: 'Удобства номера',
                maxItems: 5,
                buttons: false,
                plurals: {
                  bedrooms: ['спальня', 'спальни', 'спален'],
                  beds: ['кровать', 'кровати', 'кроватей'],
                  bathrooms: ['ванная комната', 'ванных комнаты', 'ванных комнат'],
                },
              }
            })
          .form-elements__dropdowns-wrapper
            +heading({ level: "h3", title: "dropdown", description: "default" })
            +dropdown({ 
              isOpen: false, 
              group: "comfort", 
              elements: [
                { title: "Спальни", id: "bedrooms", count: 2 }, 
                { title: "Кровати", id: "beds", count: 2 }, 
                { title: "Ванные комнаты", id: "bathrooms", count: 0 }
              ],
              options: {
                defaultText: 'Удобства номера',
                maxItems: 5,
                buttons: false,
                plurals: {
                  bedrooms: ['спальня', 'спальни', 'спален'],
                  beds: ['кровать', 'кровати', 'кроватей'],
                  bathrooms: ['ванная комната', 'ванных комнаты', 'ванных комнат'],
                },
              }
            })

        .form-elements__dropdowns-block-right
          .form-elements__dropdowns-wrapper
            +heading({ level: "h3", title: "dropdown" })
            .form-elements__dropdowns-container
              +dropdown({
                isOpen: true, 
                group: "guests", 
                elements: [
                  { title: "Взрослые", id: "adults", count: 0 },
                  { title: "Дети", id: "children", count: 0 }, 
                  { title: "Младенцы", id: "babies", count: 0 },
                ],
                options: {
                  defaultText: 'Сколько гостей',
                  buttons: true,
                  total: true,
                  numberOfLetters: 35,
                  plurals: {
                    totalItems: ['гость', 'гостя', 'гостей'],
                    babies: ['младенец', 'младенца', 'младенцев'],
                  },
                }
              })

          .form-elements__dropdowns-wrapper
            +heading({ level: "h3", title: "dropdown" })
            .form-elements__dropdowns-container
              +dropdown({
                isOpen: true, 
                group: "guests", 
                elements: [
                  { title: "Взрослые", id: "adults", count: 2 },
                  { title: "Дети", id: "children", count: 0 }, 
                  { title: "Младенцы", id: "babies", count: 1 },
                ],
                options: {
                  defaultText: 'Сколько гостей',
                  buttons: true,
                  total: true,
                  numberOfLetters: 35,
                  plurals: {
                    totalItems: ['гость', 'гостя', 'гостей'],
                    babies: ['младенец', 'младенца', 'младенцев'],
                  },
                }
              })

      section.form-elements__lists
        .form-elements__lists-block-expandable
          .form-elements__lists-wrapper-expandable
            +checkbox-list({	
              title: "Expandable checkbox list",
              isDropdown: true,
              isOpened: false,
              isRich: false,
              listItems: [
                { title: "Завтрак" }, 
                { title: "Письменный стол", checked: true }, 
                { title: "Стул для кормления", checked: true },
                { title: "Кроватка", checked: true },
                { title: "Телевизор" },
                { title: "Шампунь" }
              ]
            })
          .form-elements__lists-wrapper-expandable
            +checkbox-list({	
              title: "Expandable checkbox list",
              isDropdown: true,
              isRich: false,
              listItems: [
                { title: "Завтрак" }, 
                { title: "Письменный стол", checked: true }, 
                { title: "Стул для кормления", checked: true },
                { title: "Кроватка", checked: true },
                { title: "Телевизор" },
                { title: "Шампунь" }
              ]
            })

        .form-elements__lists-block-other
          .form-elements__lists-wrapper
            +heading({ level: "h3", title: "rich checkbox buttons" })
            +checkbox-list({	
              isRich: true,
              listItems: [
                { 
                  title: "Широкий коридор",
                  isRich: true, 
                  description: "Ширина коридоров в номере не\u00A0менее 91 см."
                },
                {
                  title: "Помощник для инвалидов",
                  isRich: true, 
                  description: "На 1 этаже вас встретит специалист и\u00A0проводит до номера."
                }
              ]
            })

          .form-elements__lists-wrapper-bullet
            +heading({ level: "h3", title: "bullet list" })
            +bullet-list([ 
              "Нельзя с питомцами", 
              "Без вечеринок и мероприятий",  
              "Время прибытия — после 13:00, а\u00A0выезд до 12:00",
            ])

      section.form-elements__room-review
        .form-elements__room-review-wrapper
          +room-dignities({
            icon: "mood",
            title: "Комфорт",
            subtitle: "Шумопоглощающие стены"
          })
          +room-dignities({
            icon: "location-city",
            title: "Удобство",
            subtitle: "Окно в каждой из спален"
          })
            
        .form-elements__room-review-wrapper
          +comment({ 
            imageName: "murad_sarafanov.jpg", 
            name: "Мурад Сарафанов", 
            dateOfVisit: "5 дней назад", 
            commentText: "Великолепный матрас на кровати в основной спальне!\
            А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие.\
            Выкрикивал комплименты повару — никто не жаловался из соседей.", 
            likeCount: 12,
            likeActive: true,
          })